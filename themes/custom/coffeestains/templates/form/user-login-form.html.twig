<div class="login-area  pt-80 pb-80">
	<div class="container">
		<div class="col-lg-6">
			<div class="customer-login text-left">
				<h4 class="title-1 title-border text-uppercase mb-30">{{'Registered customers'|t}}</h4>
				<p class="text-gray">{{'If you have an account with us, Please login!'|t}}</p>
				<div class="form-group">
					<div class="input-group">
						{{ form|without('actions') }}
					</div>
				</div>
				<div class="form-group">
					<a class="text-gray" href="{{ drupal_url('/user/password') }}">{{ 'Forgot password?'| t }}</a>
					<a class="text-gray float-right" href="{{ drupal_url('user/register') }}">{{'I do not have an account?'|t}}</a>
				</div>
				<div class="form-group">
					{{ form.actions }}
				</div>
			</div>
		</div>
	</div>
</div>
