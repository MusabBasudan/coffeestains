<div class="col-lg-4 col-md-6">
	<div class="single-product">
		<div class="product-img">
			<span class="pro-label new-label">new</span>
			{% if content.field_product_price is not empty %}
				<span class="pro-price-2">{{ content.field_product_price }}</span>
			{% endif %}
			<a href="{{ url }}">
				{% if content.field_image is not empty %}
					{{ content.field_image }}
				{% endif %}
			</a>
		</div>
		<div class="product-info clearfix text-center">
			<div class="fix">
				<h4 class="post-title">
					<a href="{{ url }}">{{ node.title.value }}</a>
				</h4>
			</div>
			<div class="fix">
				<h4 class="roaster-teaser">
					{% if content.field_roaster is not empty %}
						{{ content.field_roaster }}
					{% endif %}
				</h4>
			</div>
		</div>
	</div>
</div>
