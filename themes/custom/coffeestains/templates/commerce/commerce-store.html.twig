<div class="about-us-area  pt-80 pb-80">
	<div class="container">
		<div class="about-us bg-white">
			<div class="row">
				<div class="col-lg-6">
					<div class="about-photo">
						<img src="{{ file_url(store.field_store_image[0]['#item'].entity.fileuri) }}" alt=""/>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="about-brief bg-dark-white">
						<h4 class="title-1 title-border text-uppercase mb-30">{{store.name}}</h4>
						<p>{{store.field_about_store}}</p>
						<p>{{store.address}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="product-area pt-80 pb-80 product-style-2">
	<div class="container">
		<div class="shop-content">
			<div class="row">
				<div class="col-md-12">
					{{ drupal_view('commerce_products','store_block')}}
				</div>
			</div>
		</div>
	</div>
</div>
